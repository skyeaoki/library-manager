extends ../layout

block content

  h1 New Patron

  form(method='POST')
    p
      label(for='first_name') First Name
      input#first_name(type='text' name='first_name' maxlength='32' )

    p
      label(for='last_name') Last Name
      input#last_name(type='text' name='last_name' maxlength='32' )

    p
      label(for='address') Address
      input#address(type='text' name='address' maxlength='32' )

    p
      label(for='email') Email
      input#email(type='text' name='email' maxlength='64' )

    p
      label(for='library_id') Library ID
      input#library_id(type='text' name='library_id' maxlength='32' )

    p
      label(for='zip_code') Zip Code
      input#zip_code(type='text' name='zip_code' maxlength='5' )

    p
      input(type='submit', value='Create New Patron')
